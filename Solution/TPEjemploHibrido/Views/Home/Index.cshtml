@model TPEjemploHibrido.Models.InfoModel

@{
    ViewBag.Title = "Todo Pago Formulario Híbrido";
}

<div class="jumbotron">
    <h2>Todo Pago</h2>
    <p class="lead">Ejemplo para probar en developers el formulario híbrido</p>
</div>

@using (Html.BeginForm("FormularioHibrido", "Home"))
{
    @Html.ValidationSummary(true)
    <div class="container">
        <div class="panel-group">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Todo Pago</h3>
                </div>
                <div class="panel-body">
                    <div class="row col-sm-12 col-md-12 col-lg-12">

                        <div class="form-group">
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                <label style="font-weight: bold;">Ambiente</label>
                            </div>
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                <select class="form-control valid" data-val="true" data-val-number="The field AmbienteId must be a number." id="AmbienteId" name="AmbienteId">
                                    <option value="0"> Developers</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                <label style="font-weight: bold;">Security</label>
                            </div>
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                @Html.EditorFor(model => model.Security, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Security)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                <label style="font-weight: bold;">Merchant ID</label>
                            </div>
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                @Html.EditorFor(model => model.MerchantId, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.MerchantId)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                <label style="font-weight: bold;">Api Key</label>
                            </div>
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                @Html.EditorFor(model => model.ApiKey, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.ApiKey)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                <label style="font-weight: bold;">Monto</label>
                            </div>
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                @Html.EditorFor(model => model.Monto, new { htmlAttributes = new { @class = "form-control" } })
                                @Html.ValidationMessageFor(model => model.Monto)
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                <label style="font-weight: bold;">&nbsp;</label>
                            </div>
                            <div class="col-sm-6 col-md-6 col-lg-6">
                                <input type="submit" value="Pagar" />
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}